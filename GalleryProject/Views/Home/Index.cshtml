@{
    ViewData["Title"] = "Gallery Home";
    Layout = "_Layout"; 

}
<div class="hero-section" style="background-image: url('/images/photo4.jpg'); height: 400px; background-size: cover; background-position: center;">
    <div class="hero-content text-center text-white d-flex align-items-center justify-content-center" style="height: 100%;">
        <div>
            <h1 class="display-3">Welcome to the Art Gallery</h1>
            <p class="lead">Explore, Upload, and Share Stunning Visual Artworks</p>
            <a href="/Gallery/Gallery" class="btn btn-primary btn-lg mt-3">Explore the Gallery</a>
        </div>
    </div>
</div>


<div class="container mt-5">
    <div class="text-center">
        <h2 class="mb-4">What You Can Do</h2>
    </div>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="feature-box shadow p-4 mb-4 bg-white rounded">
                <i class="fas fa-images fa-3x text-primary mb-3"></i>
                <h4>Browse the Gallery</h4>
                <p>Discover the latest uploads and explore various art forms.</p>
                <a href="/Gallery/Gallery" class="btn btn-outline-primary">View Gallery</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box shadow p-4 mb-4 bg-white rounded">
                <i class="fas fa-upload fa-3x text-success mb-3"></i>
                <h4>Upload Your Art</h4>
                <p>Share your masterpieces with the world by uploading your art.</p>
                <a href="/Gallery/Upload" class="btn btn-outline-success">Upload Now</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box shadow p-4 mb-4 bg-white rounded">
                <i class="fas fa-share fa-3x text-info mb-3"></i>
                <h4>Share with Others</h4>
                <p>Let others enjoy your art by sharing the gallery with friends.</p>
                <a href="#" class="btn btn-outline-info">Share</a>
            </div>
        </div>
    </div>
</div>


<div class="cta-section py-5 bg-light mt-5">
    <div class="container text-center">
        <h3>Ready to share your art with the world?</h3>
        <a href="/Gallery/Upload" class="btn btn-lg btn-primary mt-3">Start Uploading</a>
    
    </div>
    </div>